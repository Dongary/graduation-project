<template name="postItem">

  <view class='post-container'>
    <view class='post-author-date'>
      <image class='post-author' src='{{avatarUrl}}'></image>
      <text class='post-date'>{{time}}</text>
    </view>
    
    <view class='location'>
      <text class='post-location'>位置：</text>
      <text class='post-locations'>{{location}}</text>
    </view>

    <image class='post-image' src='{{Key}}'></image>
    <text class='post-content'>{{content}}</text>

    <view class='post-like'>
      <text class='post-like-font'>{{reading}}</text>
      <image class='post-like-img' src='/images/icon/view.png'></image>
      <text class='post-like-font'>{{collection}}</text>
      <image class='post-like-img' src='/images/icon/chat.png'></image>
    </view>
  </view>

</template>