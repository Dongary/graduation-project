page{
  height: 100%;
  background-color: #b3d4db;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar{
    width: 300rpx;
    height: 300rpx;
    margin-top: 200rpx;
    margin-left: -10rpx;
    border: 3px solid #fff;
    border-radius: 50%;
}

.user-name{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 100rpx;
}

.moto-container{
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 180rpx;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}