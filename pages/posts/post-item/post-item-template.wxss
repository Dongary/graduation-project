.post-container{
  display: flex;
  flex-direction: column;
  margin: 10px 10px 10px 10px; 
  background-color: #ffffff;
  border-radius: 2px;
  padding-bottom: 10px;
  box-shadow: 2px 2px 2px #CCCCCC;
}
.post-author-date{
  margin: 10px 0 10px 0;
}
.post-author{
  width: 100rpx;
  height: 80rpx;
  border: 3px solid #fff;
  border-radius: 50%;
  vertical-align: middle;
}
.post-date{
  font-size: 25rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}
.location {
  margin-bottom: 10rpx;
}
.post-location {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 25rpx;
  vertical-align: middle;
}
.post-locations{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10px;
  vertical-align: middle;
}
.post-image{
  margin-left: 16px;
  width: 100%;
  height: 400rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 10px;
}
.post-like-img {
  width: 25rpx;
  height: 25rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}